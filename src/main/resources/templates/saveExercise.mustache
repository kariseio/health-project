{{>layout/header}}

<div class="container">
    <h2>Exercise Registration</h2>
    <form action="" method="post">
        <div class="col-md-3">
            <select id="exerciseName">
                <option>push up</option>
                <option>pull up</option>
                <option>sit up</option>
                <option>barbell curl</option>
            </select>
            <select id="exerciseReps">
                <option>5</option>
                <option>10</option>
                <option>15</option>
                <option>20</option>
            </select>
            <select id="exerciseSets">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
            </select>
        </div>
        <button type="button" class="btn btn-primary" id="btn-save">운동 등록</button>
    </form>
</div>

{{>layout/footer}}